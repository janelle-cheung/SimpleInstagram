<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageButton
        android:id="@+id/iBtnSave2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:background="@android:color/white"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/ic_save_foreground" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUsername2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iBtnLike"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/ivProfileImage"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iBtnLike"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/tvUsername2"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTimeAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescription"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/iBtnLike"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:adjustViewBounds="true"
        android:background="@android:color/white"
        android:scaleType="centerInside"
        android:layout_marginTop="5dp"
        app:srcCompat="@mipmap/ic_like_foreground" />

    <ImageButton
        android:id="@+id/iBtnComment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ivImage"
        android:layout_toEndOf="@+id/iBtnLike"
        android:adjustViewBounds="true"
        android:background="@android:color/white"
        android:scaleType="centerInside"
        android:layout_marginTop="5dp"
        app:srcCompat="@mipmap/ic_comment_foreground" />

    <ImageButton
        android:id="@+id/iBtnSend"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ivImage"
        android:layout_toEndOf="@+id/iBtnComment"
        android:adjustViewBounds="true"
        android:background="@android:color/white"
        android:scaleType="centerInside"
        android:layout_marginTop="5dp"
        app:srcCompat="@mipmap/ic_send_foreground" />

</RelativeLayout>